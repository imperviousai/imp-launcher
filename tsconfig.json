{
  "compilerOptions": {
    "target": "es2022", // testing. was es2017
    "allowJs": true,
    "module": "es2022", // testing. Was commonjs
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@containers/*": ["./src/render/containers/*"],
      "@components/*": ["./src/render/components/*"],
      "@redux/*": ["./src/render/redux/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "assets/**/*"]
}
