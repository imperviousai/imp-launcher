{
  "name": "impervious",
  "productName": "Impervious",
  "version": "0.4.4",
  "description": "The Impervious Process Manager and Launcher",
  "main": ".webpack/main",
  "scripts": {
    "debug": "electron-forge start --vscode",
    "start": "electron-forge start",
    "lint": "cross-env NODE_ENV=development eslint",
    "format": "prettier --ignore-path .eslintignore --write",
    "prepare": "husky install .config/husky",
    "commit": "cz",
    "create-icons": "electron-icon-builder --input=./assets/package/source.png --output=./assets/package",
    "package:mac": "electron-forge package --platform darwin",
    "package:linux": "electron-forge package --platform linux",
    "package:win": "electron-forge package --platform win32",
    "make:mac": "electron-forge make --platform darwin",
    "make:linux": "electron-forge make --platform linux",
    "make:win": "electron-forge make --platform win32",
    "publish:mac": "electron-forge publish --platform darwin",
    "publish:linux": "electron-forge publish --platform linux",
    "publish:win": "electron-forge publish --platform win32"
  },
  "keywords": [],
  "author": {
    "name": "daniel",
    "email": "saucesteals@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": "./.config/forge.config.js",
    "commitizen": {
      "path": "cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "singleQuote": false
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn prettier"
    ],
    "{*.json,.{eslintrc,prettierrc}}": [
      "yarn prettier"
    ],
    "*.{css,scss}": [
      "yarn prettier"
    ],
    "*.{html,md,yml}": [
      "yarn prettier"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-dmg": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.67",
    "@electron-forge/publisher-github": "^6.0.0-beta.67",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node": "^18.8.5",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "@zauberware/eslint-config": "^0.1.16",
    "autoprefixer": "^10.4.12",
    "babel-loader": "^8.2.5",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.3",
    "electron": "21.1.1",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.25.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.18",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.7.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.4.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.12",
    "axios": "^1.1.2",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-persist-secure": "^1.3.0",
    "electron-root-path": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-unhandled": "^4.0.1",
    "extract-zip": "^2.0.1",
    "ps-list": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2",
    "tar": "^6.1.11",
    "update-electron-app": "^2.0.1",
    "yaml": "^2.1.3"
  }
}
